{
  "name": "pillar/pillar",
  "description": "A lightweight DDD and Event Sourcing foundation for PHP applications",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "illuminate/support": "^12.0",
    "illuminate/events": "^12.0",
    "illuminate/contracts": "^12.0",
    "illuminate/container": "^12.0",
    "illuminate/database": "^12.0",
    "ext-pdo": "*"
  },
  "require-dev": {
    "illuminate/console": "^12.0",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-laravel": "^4.0",
    "orchestra/testbench": "^10.6"
  },
  "autoload": {
    "psr-4": {
      "Pillar\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "pest",
    "test:coverage": "vendor/bin/pest --coverage"
  },
  "authors": [
    {
      "name": "Edvin Syse",
      "email": "edvin@syse.priv.no"
    }
  ],
  "extra": {
    "laravel": {
      "providers": [
        "Pillar\\Provider\\PillarServiceProvider"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "homepage": "https://github.com/edvin/pillar",
  "support": {
    "issues": "https://github.com/edvin/pillar/issues",
    "source": "https://github.com/edvin/pillar"
  }
}
